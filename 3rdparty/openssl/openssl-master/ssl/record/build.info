#Needed for the multiblock code in rec_layer_s3.c
IF[{- !$disabled{asm} -}]
  $AESDEF_x86=AES_ASM
  $AESDEF_x86_64=AES_ASM

  IF[$AESDEF_{- $target{asm_arch} -}]
    $AESDEF=$AESDEF_{- $target{asm_arch} -}
  ENDIF
ENDIF

